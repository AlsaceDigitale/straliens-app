.overlay
    .login
        .wrapper.col-xs-12.col-sm-6.col-sm-offset-3
            form
                .form-group
                    label(for='firstname') Nom d'utilisateur
                    input#firstname.form-control(type='text', name='fname', ng-model='mailchimp.FNAME', placeholder='Nom d\'utilisateur' required='')
                .form-group
                    label(for='email') Email
                    input#email.form-control(type='email', name='email', ng-model='mailchimp.EMAIL', placeholder='Tapez votre addresse email', required='')
                .form-group
                    label(for='password') Password
                    input#password.form-control(type='password', name='password', ng-model='mailchimp.PWD', placeholder='Tapez votre mot de passe', required='')
                .form-group
                    label(for='team') Choix de la Team
                    input#team.form-control(type='text', name='team', ng-model='selected', typeahead="team.slogan for team in teams | filter:$viewValue | limitTo:8", placeholder='Tapez votre mot de passe', required='')
                hr
                button.btn.btn-primary.btn-fw(ng-click="create(this)") Valider
